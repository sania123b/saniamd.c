#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {

    /* Enter your code here. Read input from STDIN. Print output to STDOUT */   
    int n;
    scanf("%d",&n);
    for(int i=1;i<=n;i++)
    {
        char c1='A';
        for(int j=1;j<=2*i-1;j++)
        {
            printf("%c ",c1);
            j<i?c1++:c1--;
        }
        printf("\n");
    }
    return 0;
}
