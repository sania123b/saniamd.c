#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {

    /* Enter your code here. Read input from STDIN. Print output to STDOUT */    
    int n;
    scanf("%d",&n);
    for(int i=n;i>=1;i--)
    {
        for(int j=1;j<=i;j++)
        {
            if((j==1)||(j==i)||(i==n))
            {
                printf("*");
            }
            else{
                printf(" ");
            }
            if(j<i)
            {
                printf(" ");
            }
        }
        printf("\n");
    }
    return 0;
}
